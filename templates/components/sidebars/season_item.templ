package sidebars

import "github.com/JulOuellet/blurred-app/internal/domains/seasons"

templ SeasonItem(season seasons.SeasonModel) {
	<a
		href={ templ.SafeURL("/seasons/" + season.ID.String()) }
		hx-get={ templ.SafeURL("/seasons/" + season.ID.String()) }
		hx-target="#main-content"
		hx-swap="innerHTML"
		hx-push-url="true"
		class="block rounded-lg px-4 py-2 text-sm font-medium text-neutral-600 hover:bg-neutral-200 hover:text-neutral-800"
	>
		{ season.Name }
	</a>
}
